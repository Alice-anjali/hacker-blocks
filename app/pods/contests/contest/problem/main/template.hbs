<div class="col s12">
  <div class="row">
    <div class="card col s12">
      <div class="card-content">
        <span class="card-title"><h4>{{model.problem.name}}</h4></span>
        <p>{{markdown-to-html model.problem.content}}</p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="left">Editor</div>
    <div class="right">
      <span >Language:</span>
      <a id="editor-lang" class="dropdown-button btn red lighten-1" href="#" data-activates='lang-dropdown'>c</a>
      <ul id='lang-dropdown' class='dropdown-content'>
        {{#each-in model.lang_codes as |langId langName|}}
          <li><a {{action "langChange" langId}} href="#!">{{langName}}</a></li>
        {{/each-in}}
      </ul>
    </div>
  </div>
  <div class="row">
    {{#ace-editor}}{{/ace-editor}}
  </div>
  <div class="row">
    <div class="col s3 right">
      <div class="row">
        <div class="col s3">
          {{#circular-loader}}{{/circular-loader}}
        </div>
        <a class="col s8 btn red lighten-1 waves-effect">Submit
          <i class="material-icons right">send</i>
        </a>
      </div>
    </div>
  </div>
</div>
