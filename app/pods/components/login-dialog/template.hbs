<!-- Modal Structure -->
<div id="login-dialog" class="modal">
  <div class="modal-content">
    <div class="row">
      <form id="login-form" class="col s6" {{ action "authenticate" on="submit"}}>
        <h4>Login</h4>
        <div class="row">
          <div class="input-field col s12">
            <input id="username" type="text" class="validate">
            <label for="username">Username</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" class="validate">
            <label for="password">Password</label>
          </div>
        </div>
        <input type="submit" class="modal-action waves-effect waves-green btn-flat right" value="Sign In"/>
      </form>
      <div class="divider-vertical"></div>
      <form class="col s6">
        <h4>Sign Up</h4>
        <div class="row">
          <div class="input-field col s6">
            <input id="first_name" type="text" class="validate">
            <label for="first_name">First Name</label>
          </div>
          <div class="input-field col s6">
            <input id="last_name" type="text" class="validate">
            <label for="last_name">Last Name</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="username" type="text" class="validate">
            <label for="username">Username</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" class="validate">
            <label for="password">Password</label>
          </div>
        </div>
        <input name="submit" type="submit" class="modal-action waves-effect waves-green btn-flat right" value="Sign Up"/>
      </form>
    </div>
  </div>
  <div class="modal-footer">

  </div>
</div>
