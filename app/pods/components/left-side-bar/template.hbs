<aside id="leftsidebar" class="sidebar">
  <!-- User Info -->
  <div class="user-info">
    <div class="admin-image"> <img src="/images/placeholder-avatar.png" alt=""></div>
    {{#if session.isAuthenticated}}
      <div class="admin-action-info"> <span><strong>Welcome</strong></span>
        <h3><strong>{{model.name}}</strong></h3>
      </div>
    {{else}}
      <button class = "login-btn btn btn-info" {{action 'popup'}}data-toggle="modal" data-target="#loginModal">Login</button>
    {{/if}}
  </div>
  <!-- #User Info -->
  <!-- Menu -->
  <div class="menu">
    <ul class="list">
      <li class="header">MAIN NAVIGATION</li>
      {{#link-to 'index' tagName="li"}}<a href="#"><i class="zmdi zmdi-home"></i><span>Home</span></a>{{/link-to}}
      {{#link-to 'practice' tagName="li"}}<a href="#"><i class="material-icons">code</i><span>Daily Code Byte</span></a>{{/link-to}}
      {{#link-to 'contests' tagName="li"}}<a href="#"><i class="material-icons">assignment_ind</i><span>Contests</span></a>{{/link-to}}
      <li><a href="courses.html"><i class="zmdi zmdi-graduation-cap"></i><span>Courses</span></a></li>
    </ul>
  </div>
  <!-- #Menu -->
</aside>
