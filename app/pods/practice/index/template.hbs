<section class="content">
  <div class="container-fluid">
    <div class="block-header">
      <h2>This Week's Daily Dose</h2>
      <small class="text-muted">Take these challenges and prove your mettle </small>
    </div>
    {{#each mainProblem as |problem|}}
    <div class="row clearfix">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card greenhead">
          <div class="header">
            <h2>{{problem.name}}</h2>
          </div>
          <div class="body">
            <div class="row">
              <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                <div class="row daily-problem-div">
                  <p class="para">{{problem.content.description}}</p>
                </div>
                  {{#each problem.tags as |tag|}}
                    <span class="marginR10"><img src="/images/tag.png" alt=""/><font size="3">{{tag}}</font></span>
                  {{/each}}
                <div class="row">
                   <hr>
                    <div class="col-md-6 col-sm-6">
                      <p>{{#link-to 'practice.weekly-problem.index' problem.id class="btn btn-raised g-bg-blush2 waves-effect btn-lg" role="button"}}See Details & Attempt{{/link-to}}</p>
                    </div>

                    <div class="col-md-6 col-sm-6" style="margin-top: 18px;">

                      <span class="smallcircle m-r-20" style="display:inline-block;">
                        <span class="circlepoint">2</span>
                        <span class="lblcircle">Problems</span>
                      </span>

                      <span class="smallcircle m-r-20" style="display:inline-block;">
                          <span class="circlepoint">20</span>
                          <span class="lblcircle">Points</span>
                      </span>

                      <span class="smallcircle" style="display:inline-block;">
                          <span class="circlepoint">20</span>
                          <span class="lblcircle">Attempts</span>
                      </span>
                  </div>

                </div>
              </div>
              {{#clock-view}}{{/clock-view}}
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}

    <div class="row clearfix">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
          <div class="body">
            <div class="row clearfix">
              {{#each otherProblems as |problem|}}
                {{#problem-view isWeekly=true link='practice.weekly-problem.index' problem=problem}}{{/problem-view}}
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>